{
	"name": "v2f dev container",
	"build": {
		"dockerfile": "dockerfile"
	},
	"postCreateCommand": [
		"git submodule update --init --recursive",
		"cd yosys && make config-gcc && make -j$(nproc)",
		"cargo build --release"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"xaver.clang-format",
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"eamodio.gitlens",
				"sumneko.lua"
			],
			"settings": {
				"editor.formatOnSave": true
			}
		},
		"codespaces": {
			"openFiles": [
				"README.md",
				"examples/lua/basics.lua"
			]
		}
	}
}