{
	"name": "v2f dev container",
	"image": "mcr.microsoft.com/vscode/devcontainers/rust",
	"postCreateCommand": "sudo apt update && sudo apt install -y metis",
	"postStartCommand": "cargo build",
	"customizations": {
		"vscode": {
			"extensions": [
				"xaver.clang-format",
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"eamodio.gitlens"
			],
			"settings": {
				"editor.formatOnSave": true
			}
		},
		"codespaces": {
			"openFiles": [
				"src/main.rs"
			]
		}
	}
}