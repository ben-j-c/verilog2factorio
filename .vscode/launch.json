{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Cargo test",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--",
					"--show-output"
				]
			},
			"args": []
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'v2f'",
			"cargo": {
				"args": [
					"build",
					"--bin=v2f",
					"--package=v2f"
				],
				"filter": {
					"name": "v2f",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "testcase",
			"cargo": {
				"args": [
					"test",
					"--lib",
					"--no-run"
				]
			},
			"args": [
				"--nocapture",
				"--show-output",
				"--exact",
				"tests::logical_design_tests::swizzle_riscv_branch",
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "debug alu_example",
			"cargo": {
				"args": [
					"run",
					"--example",
					"alu_example",
					"--",
					"--no-run"
				]
			},
			"args": [
				"--nocapture",
				"--show-output",
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "debug riscv",
			"cargo": {
				"args": [
					"run",
					"--example",
					"riscv",
					"--",
					"--no-run"
				]
			},
			"args": [
				"--nocapture",
				"--show-output",
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "riscv module",
			"cargo": {
				"args": [
					"build",
					"--bin=v2f",
					"--package=v2f",
					//"--release"
				],
				"filter": {
					"name": "v2f",
					"kind": "bin"
				}
			},
			"env": {
				"V2F_ROOT": "${workspaceFolder}"
			},
			"args": [
				"-i",
				"tb.lua",
				"-o",
				"blueprint.json",
			],
			"cwd": "${workspaceFolder}/examples/riscv_v2f_optimized/testbench/decoder"
		},
	]
}