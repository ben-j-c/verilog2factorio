	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Cargo test",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--",
					"--show-output"
				]
			},
			"args": []
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'v2f'",
			"cargo": {
				"args": [
					"build",
					"--bin=v2f",
					"--package=v2f"
				],
				"filter": {
					"name": "v2f",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "debug single testcase",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=v2f",
					"--package=v2f",
					"logical_design::test::ram",
					"--",
					"--exact",
					"--show-output"
				],
				"filter": {
					"name": "v2f",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}