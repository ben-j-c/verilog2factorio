{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Cargo test",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--",
					"--show-output"
				]
			},
			"args": []
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'v2f'",
			"cargo": {
				"args": [
					"build",
					"--bin=v2f",
					"--package=v2f"
				],
				"filter": {
					"name": "v2f",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "debug single testcase",
			"cargo": {
				"args": [
					"test",
					"--lib",
					"--no-run"
				]
			},
			"args": [
				"--nocapture",
				"--show-output",
				"--exact",
				"tests::sim_tests::test10_multiport_rom",
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "debug alu_example",
			"cargo": {
				"args": [
					"run",
					"--example",
					"alu_example",
					"--",
					"--no-run"
				]
			},
			"args": [
				"--nocapture",
				"--show-output",
			],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Cargo debug (gdb)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/target/debug/examples/alu_example",
			"cwd": "${workspaceFolder}",
			"MIMode": "gdb",
			"miDebuggerPath": "/home/ben/.cargo/bin/rust-gdb",
			"setupCommands": [
				{
					"text": "-enable-pretty-printing"
				}
			],
		}
	]
}